<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="text-center">Group Information</h3>
				</div>
				<div class="panel-body">
					<div class="row">
            <div class="col-md-12">
              {{#each groups}}
              <div class="alert alert-warning" role="alert">
                <div class="pull-left">{{this.name}}</div>
                <div class="text-right">{{#count this.members}}{{/count}} member(s)</div>
              </div>
              {{else}}
              <div class="well">You're not in any group.</div>
              {{/each}}
            </div>
          </div>
					<a class="btn btn-lg btn-primary btn-block" href="/group/edit/{{me.id}}">Edit</a>
				</div>
			</div>
		</div>
	</div>
</div>
