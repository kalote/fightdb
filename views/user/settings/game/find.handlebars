<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="text-center">Game Information</h3>
				</div>
				<div class="panel-body">
          {{#unless gsettings.games}}
					<div class="row">
						<div class="col-md-12 text-center">
							<div class="well">No game settings found</div>
						</div>
					</div>
					{{else}}
					<div class="row">
						<div class="col-md-4 text-center">
							<h3>Game:</h3>
						</div>
						<div class="col-md-8">
							<div class="row">
								{{#each gsettings.games}}
								<div class="col-md-8">
									<img src="/images/game/{{this.picture}}" class="center-block img-responsive">
								</div>
								{{/each}}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4 text-center">
							<h3>Favorite characters:</h3>
						</div>
						<div class="col-md-8">
							{{#each gsettings.favoriteCharacters}}
              <div class="list-group-item col-xs-4">
								<div
									style="background-image: url('/images/character/{{this.picture}}');"
									class="center-block charSpriteSelected char charSprite"></div>
              </div>
							{{/each}}
						</div>
					</div>
					{{/unless}}
					<a class="btn btn-lg btn-primary btn-block" href="/user/settings/game/edit/{{me.id}}">Edit</a>
				</div>
			</div>
		</div>
	</div>
</div>
