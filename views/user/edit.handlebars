<div class="container">
	<div class="row">
		<form id="edit-form" class="col-md-6 col-md-offset-3" name="edit">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h2 class="form-edit-heading">Edit your information</h2>
				</div>
				<div class="panel-body">
					<!-- N A M E -->
					<div class="control-group form-group col-md-12">
						<label>Your full name</label>

						<input type="text" class="form-control" value="{{me.name}}" name="name">

						<span class="help-block has-error" ng-if="edit.name.$dirty">
							<span ng-show="edit.name.$error.required">Name is required.</span>
							<span ng-show="edit.name.$error.maxlength">The name cannot be more than 50 characters.</span>
						</span>
					</div>

					<!-- N I C K N A M E -->
					<div class="control-group form-group col-md-12" ng-class="{'has-error':edit.nickname.$invalid && edit.nickname.$dirty}">
						<label>Your nickname</label>

						<input type="text" class="form-control" ng-init="editForm.nickname = '{{me.nickname}}'" name="nickname" ng-model="editForm.nickname" ng-maxlength="50" required>

						<span class="help-block has-error" ng-if="edit.nickname.$dirty">
							<span ng-show="edit.nickname.$error.required">Nickname is required.</span>
							<span ng-show="edit.nickname.$error.maxlength">The nickname cannot be more than 50 characters.</span>
						</span>
					</div>

					<!-- G A M E R T A G -->
					<div class="control-group form-group col-md-12">
						<label>Your gamertag</label>

						<input type="text" class="form-control" ng-init="editForm.gamertag = '{{me.gamertag}}'" name="gamertag" ng-model="editForm.gamertag">
					</div>

					<!-- E M A I L -->
					<div class="control-group form-group col-md-12" ng-class="{'has-error':edit.email.$invalid && edit.email.$dirty}">

						<label>Your email address</label>

						<input type="email" class="form-control" ng-init="editForm.email = '{{me.email}}'" name="email" ng-model="editForm.email" required >

						<span class="help-block has-error" ng-if="edit.email.$dirty">
							<span ng-show="edit.email.$error.required">Email address is required.</span>
							<span ng-show="edit.email.$error.email">Not a valid email address.</span>
						</span>
					</div>

					<div class="control-group form-group col-md-12">
						<button class="btn btn-primary btn-lg btn-block" type="submit" ng-disabled="edit.$invalid">
							<span ng-show="!editForm.loading">Update information</span>
							<span class="overlord-loading-spinner fa fa-spinner" ng-show="editForm.loading" ></span>
							<span ng-show="editForm.loading">Updating your information...</span>
						</button>
					</div>

					<input type="hidden" name="_csrf" value="{{_csrf}}" ng-model="editForm._csrf" />
					<input type="hidden" name="userId" ng-init=" editForm.userId = '{{me.id}}'" ng-model="editForm.userId" />
				</div>
			</div>
		</form>
	</div>
</div>
