<div class="container" ng-controller="LoginController">
	<div class="row">
		<form ng-submit="submitLoginForm()" class="form-login col-md-6 col-md-offset-3">
			<h2 class="form-login-heading">Please log in...</h2>
			<% if(flash && flash.err) { %>
				<div class="col-md-12 alert alert-danger">
			<% Object.keys(flash.err).forEach(function(error) { %>
					<strong><%- flash.err[error].name %>:</strong> 
					<%- flash.err[error].message %>
			<% }) %>
				</div>
			<% } %>
			<div class="control-group form-group col-md-12">
				<label>Email</label>
				<input ng-model="loginForm.email" type="text" class="form-control" name="email" placeholder="daigo@thebeast.com">
			</div>
			<div class="control-group form-group col-md-12">
				<label>Password</label>
				<input ng-model="loginForm.password" type="password" class="form-control" name="password" placeholder="daigo@thebeast.com">
			</div>
			<div class="control-group form-group col-md-12">
				<button type="submit" class="btn btn-success">
					<span ng-show="!loginForm.loading">Log in</span>
					<span ng-show="loginForm.loading" class="fa fa-spinner"></span>
					<span ng-show="loginForm.loading">Logging in...</span>
	            </button>
			</div>
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />	
		</form>
	</div>
</div>